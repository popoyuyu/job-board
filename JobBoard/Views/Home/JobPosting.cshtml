@using JobBoard.Models;

<!DOCTYPE html>
<html>

<head>
  <title>Post A Job</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <style>
    body {
      background-color: rgb(247, 203, 217);
      text-align: center;
    }

    .container {
      background-color: darkorchid;
      color: white;
      width: 70%;
      padding: 1em;
      margin-top: 1em;
      border-radius: .5em;
    }

    h1 {
      margin-bottom: 1em;
    }

    div {
      margin-bottom: .5em;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>@Model.Title</h1>
    <h2>@Model.ContactInfo.CompanyName</h2>
    <p>@Model.Description</p>
    <h3>Contact Info</h3>
    <p>@Model.ContactInfo.CompanyName</p>
    <p>@Model.ContactInfo.Name</p>
    <p>@Model.ContactInfo.Email</p>
    <p>@Model.ContactInfo.PhoneNumber</p>
  </div>
</body>

</html>